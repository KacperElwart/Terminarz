

@model Terminarz.Models.Happening
@using Terminarz.Models
@{
    ViewData["Title"] = "Utwórz wydarzenie";
}

<h1>Create</h1>

<h4>Happening</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="AddressID" class="control-label"></label>
                <select asp-for="AddressID" class="form-control" asp-items="ViewBag.AddressID"></select>
            </div>
            <a asp-action="CreateAddress"> Dodaj nowy adres</a>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()">
                    <option selected="selected" value="">Wybierz priorytet</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="input-group date" id='datetimepicker1'>
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" type="date" class="form-control" />
                <input asp-for="StartTime" type="time" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="input-group date" id='datetimepicker1'>
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" type="date" class="form-control" />
                <input asp-for="EndTime" type="time" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
   
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
